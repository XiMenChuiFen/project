/* pages/bill/bill.wxss */
.bill{
  height: 100vh;
  overflow: hidden;
}
.title-count {
  background: #fcdc2d
}
.bill-selectTime {
  margin-bottom: 10px;
  display: flex;
  justify-content: center;
  font-size: 11px;
  color: #82773c;
}

.picker {
  position: absolute;
  right: 20px;
  font-size: 12px;
  color: #343233;
  border-right: 1px solid #95873f;
}
.picker span{
  position: relative;
  display: inline-block;
  width: 30px;
}
.picker span image {
  position: absolute;
  top: 2px;
  right: 0px;
  width: 15px;
  height: 15px;
}
.prckers {
  border:none;
}
.balance {
  text-align: center;
  font-size: 32px;
}
.money-count {
  margin-top: 20px;
  padding-bottom: 20px;
  display: flex;
  font-size: 11px;
  color: #82773c;
}
.bill-pay {
  width: 50%;
  text-align: right;
  border-right: 1px solid #bcaa47;
}
.money-count view {
  padding-right: 20px;
  padding-left: 20px;
  box-sizing: border-box;
}
.pay-number{
  font-size: 14px;
  color: black;
}
.decimal {
  font-size: 12px;
}
.list-title {
  padding: 0 20px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #969696;
  height: 30px;
  border-bottom: 1px solid #d9d9d9;
  justify-content: space-between;
}
.ym {
  width: 31px;
  text-align: center;
}
.title-pay,.title-income,.title-balance {
  width:100px;
  box-sizing: border-box; 
  text-align: center;
}
.lists {
  padding:0 20px;
  box-sizing:border-box;
  display:flex;
  align-items:center;
  font-size:14px;
  color:#969696;
  height:50px;
  border-bottom:1px solid #d9d9d9;
  justify-content:space-between;
}
.lists-color {
  color: black;
}
.lists-box {
  padding-bottom: 40px;
}