/* pages/my/my.wxss */
.my {
  height: 100vh;
  background: #f5f5f5;
}
.my-login {
  position: relative;
  width: 100%;
  background: #fcdc2d;
}
.user-img {
  margin: 0 auto;
  height: 80px;
  width: 80px;
  border-radius: 50%;
  /* background: #ccc; */
}
.user-img image {
  height: 80px;
  width: 80px;
  border-radius: 50%;
}
.my-login-button {
  padding-top: 10px;
  text-align: center;
  font-size: 18px;
  color: #343233;
}
.update-user{
  position: absolute;
  font-size: 12px;
  top: 0;
  right: 20px;
  color: #82773c;
}
.user-data {
  padding-top: 20px;
  display: flex;
  justify-content: space-between;
  background: #fcdc2d;
}
.sign-in,.day-count,.count-number {
  padding-bottom: 20px;
  width: 50%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  color: #82773c;
  font-size: 10px;
}
.sign-in view,.day-count view,.count-number view {
  width: 100%;
  text-align: center;
}
.numbers {
  margin-bottom: 10px;
  font-size: 16px;
  color: #343233;
  height: 21px;
}
.lists {
  margin-top: 10px;
  background: #fefefe;
}
.list{
  padding: 10px 15px;
  display: flex;
  justify-content: space-between;
}
.list-icon{
  width:50px;
  height:25px;
}
.list-icon image{
  width:25px;
  height:25px;
  background:#f5f5f5;
}
.list-name {
  display:flex;
  justify-content:space-between;
  align-items: center;
  width:100%;
  height:25px;
  font-size:16px;
}
.list-right-icon {
   width:20px;
  height:20px;
}
.list-right-icon image {
  width: 100%;
  height: 100%;
  transform:rotate(180deg);
  opacity: .7;
}