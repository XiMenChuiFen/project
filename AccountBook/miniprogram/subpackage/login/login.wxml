<!--miniprogram/subpackage/login/login.wxml-->
<view class='login'>
  <title text="登录"></title>
  <view class='login-box'>
    <view class="login-content">
      <view class='logo'>
        <image src='../../images/sigin_icon@3x.png'></image>
      </view>
      <view class="login-text">允许微信授权后,可体验更多功能</view>
      <button class='login-button' open-type="getUserInfo"	bindgetuserinfo="onGotUserInfo">允许</button>
      <button class='home-button' bindtap='returnUrl'>返回首页</button>
    </view>
  </view>
</view>
