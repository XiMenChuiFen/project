/* miniprogram/subpackage/login/login.wxss */
.login {
  height: 100vh;
  background: #f5f5f5;
}
.login-box {
  position: absolute;
  top: 0;
  padding-top: 40%;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  width: 100%;
  height: 100vh;
}
.login-content {
  width: 100%;
}
.logo{
  margin: 0 auto;
  width: 100px;
  height: 100px;
}
.logo image {
  width: 100%;
  height: 100%;
}
.login-text {
  margin: 10px 0 20px 0;
  width: 100%;
  font-size: 14px;
  color: #969696;
  text-align: center;
}
.home-button,.login-button  {
  margin-left: 20px;
  margin-right: 20px;
}
.login-button {
  margin-bottom: 20px;
  background: #fcdc2d;
}